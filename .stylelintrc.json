{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "customSyntax": "postcss-scss",
  "rules": {
    "at-rule-no-unknown": [true, { "ignoreAtRules": ["extend", "include", "mixin"] }],
    "block-no-empty": true,
    "unit-allowed-list": ["em", "rem", "%", "s", "px"],
    "import-notation": null
  }
}
